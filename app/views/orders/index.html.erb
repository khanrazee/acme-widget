<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= is_admin? ? 'All Orders' : 'Your Orders' %></h1>
    <%= link_to 'Back to Home', root_path, class: 'btn btn-secondary' %>
  </div>
  
  <% if @orders.any? %>
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Order #</th>
                    <% if is_admin? %>
                      <th>Customer</th>
                    <% end %>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Total</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @orders.each do |order| %>
                    <tr>
                      <td><%= order.id %></td>
                      <% if is_admin? %>
                        <td><%= order.user.email.split('@').first.capitalize %></td>
                      <% end %>
                      <td><%= order.created_at.strftime("%B %d, %Y") %></td>
                      <td><span class="badge bg-<%= order.status == 'completed' ? 'success' : (order.status == 'cancelled' ? 'danger' : 'info') %>">
                        <%= order.status.humanize %>
                      </span></td>
                      <td><%= number_to_currency(order.total_price_in_currency) %></td>
                      <td>
                        <%= link_to 'View Details', order_path(order), class: 'btn btn-sm btn-outline-primary' %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            
            <div class="d-flex justify-content-center mt-4">
              <%= paginate @orders %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="alert alert-info">
      <p><%= is_admin? ? "There are no orders in the system." : "You haven't placed any orders yet." %></p>
      <% if is_customer? %>
        <%= link_to 'Start Shopping', products_path, class: 'btn btn-primary' %>
      <% end %>
    </div>
  <% end %>
</div>
