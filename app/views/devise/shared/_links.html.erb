<div class="d-flex flex-column gap-3 my-4">
  <%- if controller_name != 'sessions' %>
    <div class="text-center">
      <%= link_to new_session_path(resource_name), class: "btn btn-outline-primary w-100" do %>
        <i class="fas fa-sign-in-alt me-2"></i> Already have an account? Sign in
      <% end %>
    </div>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="text-center">
      <%= link_to new_registration_path(resource_name), class: "btn btn-outline-success w-100" do %>
        <i class="fas fa-user-plus me-2"></i> Don't have an account? Sign up
      <% end %>
    </div>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="text-center mt-3 mb-1">
      <%= link_to new_password_path(resource_name), class: "btn btn-link text-secondary text-decoration-none" do %>
        <i class="fas fa-key me-1"></i> Forgot your password?
      <% end %>
    </div>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div class="text-center mb-1">
      <%= link_to new_confirmation_path(resource_name), class: "btn btn-link text-secondary text-decoration-none" do %>
        <i class="fas fa-envelope me-1"></i> Didn't receive confirmation instructions?
      <% end %>
    </div>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div class="text-center mb-1">
      <%= link_to new_unlock_path(resource_name), class: "btn btn-link text-secondary text-decoration-none" do %>
        <i class="fas fa-unlock-alt me-1"></i> Didn't receive unlock instructions?
      <% end %>
    </div>
  <% end %>
  
  <%- if devise_mapping.omniauthable? %>
    <div class="mt-4">
      <div class="text-center mb-2 text-muted">Or sign in with</div>
      <div class="d-flex flex-column gap-2">
        <%- resource_class.omniauth_providers.each do |provider| %>
          <% btn_class = provider.to_s == 'google_oauth2' ? 'btn-danger' : (provider.to_s == 'facebook' ? 'btn-primary' : 'btn-dark') %>
          <%= link_to omniauth_authorize_path(resource_name, provider), method: :post, class: "btn #{btn_class} w-100" do %>
            <i class="fab fa-<%= provider.to_s == 'google_oauth2' ? 'google' : provider.to_s %> me-2"></i> Sign in with <%= OmniAuth::Utils.camelize(provider).gsub('Oauth2', '') %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
