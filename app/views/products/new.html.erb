<div class="product-form-container">
  <div class="form-header">
    <h1>Create New Product</h1>
    <p class="form-description">Fill in the details below to add a new product to your inventory.</p>
  </div>
  
  <div class="form-card">
    <%= render "form", product: @product %>
  </div>
  
  <div class="form-footer">
    <%= link_to "Back to Products", products_path, class: "btn btn-outline" %>
  </div>
</div>
